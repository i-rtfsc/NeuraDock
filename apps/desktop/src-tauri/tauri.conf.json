{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NeuraDock",
  "version": "0.5.0",
  "identifier": "com.neuradock.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "security": {
      "capabilities": [
        {
          "identifier": "main",
          "description": "Default capabilities for main window",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "core:app:allow-set-app-theme",
            "core:window:allow-set-theme",
            "core:window:allow-start-dragging",
            "dialog:default",
            "fs:default",
            "notification:default",
            "store:default",
            "shell:allow-open",
            "os:default",
            "opener:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "backgroundColor": "#F5F5F5",
        "visible": false
      }
    ]
  }
}
